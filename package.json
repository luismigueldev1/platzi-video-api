{
  "name": "platzi-video-api",
  "version": "1.0.0",
  "description": "movies api para platzi-video",
  "main": "index.js",
  "scripts": {
    "dev": "set DEBUG=app:* && set NODE_ENV=development && nodemon index.js",
    "start": "set NODE_ENV=production && node index",
    "test": "set NODE_ENV=development && mocha --exit",
    "cover": "nyc npm run test",
    "report": "nyc report --reporter=html && open coverage/index.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "8.0.1",
    "@hapi/joi": "16.1.8",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.3",
    "mongodb": "3.3.5"
  },
  "devDependencies": {
    "eslint": "6.7.2",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "mocha": "6.2.2",
    "nodemon": "2.0.1",
    "nyc": "14.1.1",
    "prettier": "1.19.1",
    "proxyquire": "2.1.3",
    "sinon": "7.5.0",
    "supertest": "4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "routes",
      "services",
      "lib",
      "utils"
    ]
  }
}
